<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="chat.pkg.ChatActivity"
    android:background="@drawable/chat_background">

    <include
        android:id="@+id/my_chat_toolbar"
        layout="@layout/toolbar_top"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/chat_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout"
        android:layout_below="@id/my_chat_toolbar">

    </android.support.v7.widget.RecyclerView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="2dp"
        android:layout_margin="4dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="10"
        android:background="@drawable/message_sent_background"
        android:id="@+id/linearLayout">

        <ImageButton
            android:id="@+id/chat_add_file"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/add_black_24dp"
            android:background="@android:color/transparent" />

        <EditText
            android:id="@+id/chat_message"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:layout_weight="8"
            android:hint="Type your message"
            android:maxLines="4"
            android:selectAllOnFocus="false"
            android:textSize="18sp"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/chat_message_send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/send_black_24dp"
            android:background="@android:color/transparent"/>

    </LinearLayout>

</RelativeLayout>
